// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @unique @default(uuid())
  name        String
  email       String @unique
  cpf         String
  phone       String
  birthDate   String
  description String
  typeUser    String
  password    String
  created_at  DateTime @default(now())
  adresses    Adresse[]
  vehicles    Vehicle[]
  comments    Comment[]
  
  @@map("users")
}

model Vehicle {
  id          String @unique @default(uuid())
  title       String
  typeVehicle String
  description String
  year        String
  mileage     String
  price       Int
  userId      String
  created_at  DateTime @default(now())
  images      Image[]
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments    Comment[]

  @@map("vehicles")
}

model Comment {
  id          String @unique @default(uuid())
  comment     String
  userId      String
  vehicleId   String
  created_at  DateTime @default(now())
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle     Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Image {
  id          String @unique @default(uuid())
  image       String
  vehicleId   String
  vehicle     Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  @@map("images")
}

model Adresse {
  id          String @unique @default(uuid())
  cep         String
  state       String
  city        String
  road        String
  numberHouse Int
  complement  String
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("adresses")
}